<zk id="contentGB" viewModel="@id('vm') @load(viewModel)">

	<button style="margin-bottom:2px;" label="Agregar Item" onClick="@command('agregarElemento')" />

	<grid sclass="grilla-items" model="@bind(vm.items)" mold="paging" pageSize="10" emptyMessage="No existen items aun.">
		<columns>
			<column width="160px;"/>
			<column width="200px;" />
			<column width="120px;"/>
			<column width="150px;"/>
			<column width="120px;"/>
			<column width="140px;"/>
			<column />
		</columns>

		<rows>
			<template name="model">
				<row>

					<hlayout>
						<label value="Tipo" />
						<combobox width="120px;" >
							<comboitem label="Service" />
							<comboitem label="FabricaciÃ³n" />
							<comboitem label="Mantenimiento" />
						</combobox>
					</hlayout>
					
					<hlayout>
						<label value="Referencia:" />
						<textbox width="120px" value="@bind(each.referencia)" />
					</hlayout>

					<hlayout>
						<label value="Cantidad:"></label>
						<textbox width="40px;" value="@bind(each.cantidad)" />
					</hlayout>

					<hlayout>
						<label value="Moneda:" />
						<combobox width="80px;">
							<comboitem label="Peso" />
							<comboitem label="Dolar" />
							<comboitem label="Euro" />
						</combobox>
					</hlayout>

					<hlayout>
						<label value="Importe:"></label>
						<textbox width="50px;" value="@bind(each.importe)" />
					</hlayout>
					
					<hlayout>
						<label value="Importe Total:" />
						<textbox width="50px;" value="@bind(each.importeTotal)" />
					</hlayout>
					
					<hlayout>
						<label value="Cargar Plantilla:" />
						<button label="..." onClick="@command('openHelper', clase='plantilla', ov=each.plantilla)" />
						<textbox style="vertical-align: middle;resize:none; overflow: hidden;" multiline="true" rows="1" value="@bind(each.plantilla.descripcion)" onClick="@command('editarPlantilla', ov=each)" readonly="true" />
					</hlayout>

				</row>
			</template>

		</rows>


	</grid>

</zk>