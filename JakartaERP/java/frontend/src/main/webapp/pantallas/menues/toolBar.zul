			<toolbarbutton   onClick="@command('print')"  image="/pantallas/icons/print.png" tooltiptext="Imprimir" />
		</div>
		<div hflex="1" droppable="true"		style="text-align: right;">
			<toolbarbutton  image="/pantallas/icons/help.png" 
