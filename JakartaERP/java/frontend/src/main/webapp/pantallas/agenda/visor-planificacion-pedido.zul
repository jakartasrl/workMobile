<zk viewModel="@id('vm') @load(viewModel)">

	<style>

		redRow{
			background-color : red;
			color: yellow;
		}
		
		blueRow{
			background-color : blue;
		}
		
		yellowRow{
			background-color : yellow;
		}
		
	</style>
		
	<div width="100%" >	
		<panel title="Pedido" border="normal" height="auto" >
	
			<panelchildren>
	
				<grid style="border-style:none;padding:3px;" sizedByContent="true">
	
					<columns>
						<column width="150px"/>
						<column width="120px"/>
						<column width="100px"/>
						<column width="100px"/>
						<column width="100px"/>
						<column width="150px"/>
					</columns>
				
					<rows>
				    	<row sclass="fila-maestro" >
				    	
							<label value="Nro. de Pedido : " />
							<textbox class="campoCodigo-medium" value="@bind(vm.pedido.nro)" readonly="true"/>
		
							<label class="name" value="Fecha : " />
							<datebox id="fecha" width="90%" value="@bind(vm.pedido.fecha)" format="dd/MM/yyyy" disabled="true" buttonVisible="false"/>
							
						</row>
						
				    	<row sclass="fila-maestro">
							<label value="Cliente | Sucursal : " />
							<hlayout>
								<textbox readonly="true" sclass="campoCodigo-medium" value="@bind(vm.pedido.codCliente)" />
							</hlayout>
		
							<hlayout>
								<textbox readonly="true" sclass="campoCodigo-vsmall" value="@bind(vm.pedido.codSucursal)" />
							</hlayout>
	
							<cell colspan="3">
								<textbox value="@bind(vm.pedido.descripcionClienteSucursal)" width="100%" readonly="true"/>
							</cell>						
							
						</row>
						
						<row sclass="fila-maestro">
							<label value="Lista de Precios : " />
	
				    		<hlayout>
								<label visible="false" value=""/>
								<textbox readonly="true" sclass="campoCodigo-small" value="@bind(vm.pedido.codListaPrecio)"/>
				    		</hlayout>
	
							<cell colspan="4">
								<textbox width="100%" value="@bind(vm.pedido.descripcionListaPrecio)" readonly="true"/>
							</cell>
				    		
						</row>
						
					</rows>
				</grid>
	
			</panelchildren>
		</panel>
	</div>
			
	<div>
		<include id="gridDetailTasks" src="/pantallas/agenda/grilla-tareas-filtradas.zul" />
	</div>

</zk>