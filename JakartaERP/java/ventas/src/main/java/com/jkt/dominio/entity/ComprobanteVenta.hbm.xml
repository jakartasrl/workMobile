<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<subclass  name="com.jkt.dominio.ComprobanteVenta" discriminator-value="COMPROBANTE-VENTA" extends="com.jkt.dominio.ComprobanteCliente">

		<property name="nombre" type="string" column="NOMBRE" />
		<property name="descripcion" type="text" column="DESCRIPCION" />

		<many-to-one name="vendedor" class="com.jkt.erp.varios.Vendedor" cascade="all" column="VENDEDOR_ID" />
		<many-to-one name="representante" class="com.jkt.erp.varios.Representante" cascade="all" column="REPRESENTANTE_ID" />

		<list name="detalles" table="COMPROBANTE_VENTA_DET" lazy="true"
			cascade="all">
			<key column="COMPROBANTE_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.dominio.ComprobanteVentaDet" />
		</list>
		
		<subclass name="com.jkt.dominio.Cotizacion" extends="com.jkt.dominio.ComprobanteVenta">
		</subclass>		

		<subclass name="com.jkt.dominio.Pedido" extends="com.jkt.dominio.ComprobanteVenta">
		</subclass>

	</subclass>

</hibernate-mapping>