<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.cotizador.dominio.Cotizador" table="COTIZADOR">
		<id name="id" column="COTIZADOR_ID">
			<generator class="native"></generator>
		</id>

		<property name="usuarioCreacion" column="USUARIO_CREACION"/>
		<property name="usuarioRevision" column="USUARIO_REVISION"/>
		
		<property name="revisado" column="REVISADO" type="boolean" />
		<property name="fecha" column="FECHA" type="date"></property>
		<property name="fechaRevision" column="FECHA_REVISION" type="date"></property>
		
		<many-to-one name="modelo" class="com.jkt.cotizador.dominio.ModeloCotizador" column="MODELO_COTIZADOR" cascade="none"></many-to-one>
		
		<list name="detalles" table="COTIZADOR_DET" lazy="true" cascade="all">
			<key column="COTIZADOR_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.cotizador.dominio.CotizadorDet" />
		</list>
		
	</class>

</hibernate-mapping>
	