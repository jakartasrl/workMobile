<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.pedido.dominio.TareaPedido" table="TAREA_PEDIDO" >
		
		<id name="id" column="TAREA_PEDIDO_ID">
			<generator class="native" />
		</id>

		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="activo" column="ACTIVO" type="boolean" />
		<property name="esTareaFacturacion" column="TAREA_FACTURACION" type="boolean" />
		
		<many-to-one name="formaFacturacion" class="com.jkt.pedido.dominio.FormaFacturacion" column="FACTURACION_ID" cascade="none"></many-to-one>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="descripcionAbreviada" column="DESCRIPCION_ABREV"/>
		<property name="descripcionCompleta" column="DESCRIPCION_COMPLETA" type="text"/>
		
		<property name="idEstado" column="ESTADO" type="integer" />

		<property name="diasDuracion" type="integer" column="DURACION_EN_DIAS"></property>
		<property not-null="false" name="fechaLimite" column="FECHA_LIMITE" type="date"/>
		<property not-null="false" name="fechaCumplimiento" column="FECHA_CUMPLIMIENTO" type="date"/>
		<property not-null="false" name="fechaUltimoPrecedente" column="FECHA_ULTIMO_PRECEDENTE" type="date"/>
		
		<many-to-one name="sector" class="com.jkt.dominio.Sector" column="SECTOR_ID" cascade="all"></many-to-one>
		
		<many-to-one name="pedido" class="com.jkt.pedido.dominio.Pedido" cascade="none" column="PEDIDO_ID"/>
<!-- 		<many-to-one name="pedido" class="com.jkt.pedido.dominio.Pedido" cascade="none" column="PEDIDO_ID"/> -->
		
		<list name="logs" lazy="true" cascade="all">
			<key column="TAREA_PEDIDO__ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.pedido.dominio.LogTarea" />
		</list>
		
	</class>

</hibernate-mapping>

