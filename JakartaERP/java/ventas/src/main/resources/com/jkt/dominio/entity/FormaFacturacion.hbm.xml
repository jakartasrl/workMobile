<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.pedido.dominio.FormaFacturacion" table="FORMA_FACTURACION" >
		
		<id name="id" column="FORMA_FACTURACION_ID">
			<generator class="native" />
		</id>

		<many-to-one name="producto" class="com.jkt.erp.articulos.Producto" cascade="all" column="PRODUCTO_ID"/>
		<property name="descripcion" column="DESCRIPCION" type="string"/>
		<property name="porcentaje" column="PORCENTAJE" type="double"/>
		<property name="importe" column="IMPORTE" type="double"/>
		
		<many-to-one name="condicionPago" column="COND_PAGO_ID" class="com.jkt.varios.dominio.CondPago" />

		<property name="activo" column="ACTIVO" type="boolean" />
		
	</class>

</hibernate-mapping>