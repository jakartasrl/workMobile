<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.cotizador.dominio.ModeloCotizador" table="MODELO_COTIZADOR" >
		
		<id name="id" column="MODELO_COTIZADOR_ID">
			<generator class="native" />
		</id>

		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<list name="titulos" table="TITULO_MODELO_COTIZADOR" lazy="true" cascade="all">
			<key column="MODELO_COTIZADOR_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.cotizador.dominio.TituloModeloCotizador" />
		</list>
		
	
	</class>

</hibernate-mapping>