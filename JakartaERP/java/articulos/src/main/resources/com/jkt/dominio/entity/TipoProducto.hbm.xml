<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.articulos.TipoProducto" table="TIPO_PRODUCTO">
		<id name="id" column="TIPO_PRODUCTO_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" unique="true"/>
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<list name="caracteristicas" lazy="true" cascade="all">
			<key column="TIPO_PRODUCTO_ID" />
			<index column="secu" />
			<one-to-many class="com.jkt.erp.articulos.TipoProductoDet" />
		</list>
		
	</class>
	
</hibernate-mapping>