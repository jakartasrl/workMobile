<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.articulos.TipoProductoDet" table="TIPO_PRODUCTO_DET">

		<id name="id" column="TIPO_PRODUCTO_DET_ID">
			<generator class="native"></generator>
		</id>

		<many-to-one  name="tipoProducto" column="TIPO_PRODUCTO_ID" not-null="true" class="com.jkt.erp.articulos.TipoProducto" cascade="" ></many-to-one>
	    <many-to-one  name="caracteristica" column="CARAC_ID" class="com.jkt.erp.articulos.CaracteristicaProducto" cascade=""></many-to-one>
	
		<property name="obligatorio" column="OBLIGATORIO" type="boolean" />
		<property name="armaCodigo" column="ARMA_CODIGO" type="boolean" />
		<property name="armaDescripcion" column="ARMA_DESCR" type="boolean" />
		<property name="orden" column="ORDEN" type="integer" />
		<property name="activo" column="ACTIVO" type="boolean" />

	</class>
</hibernate-mapping>