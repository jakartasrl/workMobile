<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.articulos.TablaValoresCaracProd" table="TABLA_VALORES_CARAC_PROD">
		<id name="id" column="TABLA_VALORES_CARAC_PROD_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" unique="true"/>
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<list name="valoresDeTabla" table="TABLA_VALORES" lazy="true" cascade="all">
			<key column="TABLA_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.articulos.ValoresTablas" />
		</list>
				
	</class>
	
</hibernate-mapping>