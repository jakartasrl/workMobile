<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.articulos.Producto" table="PRODUCTO">
		<id name="id" column="PRODUCTO_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<property name="descripcionAbrev" column="DESCRIPCION_ABREV"/>
		<property name="comprable" column="COMPRABLE" type="boolean" />
		<property name="vendible" column="VENDIBLE" type="boolean" />
		<property name="stockeable" column="STOCKEABLE" type="boolean" />
		<property name="prodPropia" column="PRODPROPIA" type="boolean" />
		<property name="bien" column="BIEN" type="boolean" />
		
		<many-to-one name="tipoProducto" class="com.jkt.erp.articulos.TipoProducto" column="TIPO_PRODUCTO_ID" cascade="none"></many-to-one>		
		
		<list name="clasificadores" table="PRODUCTO_CLASIFICADOR" lazy="true" cascade="all">
			<key column="PRODUCTO_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.articulos.ProductoClasificador" />
		</list>
		
		<list name="articulosStock" table="ARTICULOS_STOCK" lazy="true" cascade="all">
			<key column="PRODUCTO_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.articulos.ArticuloStock" />
		</list>
		
	</class>
	
</hibernate-mapping>