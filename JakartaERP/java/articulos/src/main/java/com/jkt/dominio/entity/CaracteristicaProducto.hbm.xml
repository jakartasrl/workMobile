<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.articulos.CaracteristicaProducto" table="CARACTERISTICA_PRODUCTO">

		<id name="id" column="CARACTERISTICA_PRODUCTO_ID">
			<generator class="native"></generator>
		</id>

		<many-to-one name="tabla" class="com.jkt.erp.articulos.TablaValoresCaracProd" column="TABLA_CARACTERISTICAS_ID" cascade="save-update" ></many-to-one>
	
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="tipoDato" column="TIPO_DE_DATO" type="string"  length="20"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		

	</class>
</hibernate-mapping>