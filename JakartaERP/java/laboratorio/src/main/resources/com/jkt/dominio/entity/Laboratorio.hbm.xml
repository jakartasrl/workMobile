<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.laboratorio.dominio.Laboratorio" table="LABORATORIO">
		<id name="id" column="ID_LABORATORIO">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<list name="determinaciones" table="DETERMINACIONES" cascade="all">
			<key column="ID_LABORATORIO" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.laboratorio.dominio.Determinacion" />
		</list>
		
	</class>
	
</hibernate-mapping>