<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.erp.varios.ClienteSucursal" table="CLIENTE_SUCURSAL" >
		
		<id name="id" column="CLIENTE_SUCURSAL_ID">
			<generator class="native" />
		</id>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="domicilioEntregaDeFactura" column="DOM_ENTREGA_FACTURA"/>
		<property name="numero" column="NUMERO" type="integer" />
		<property name="activo" column="ACTIVO" type="boolean" />
		<property name="telefono" column="TELEFONO"/>
		
		<many-to-one name="cliente" column="CLIENTE_ID" class="com.jkt.erp.varios.Cliente"></many-to-one>
		<many-to-one name="direccion" class="com.jkt.varios.dominio.Direccion" cascade="all" column="DIRECCION_ID"/>

		<many-to-one name="vendedorComercial" class="com.jkt.erp.varios.Vendedor" cascade="all" column="VENDEDOR_COMERCIAL_ID"/>
		<many-to-one name="vendedorTecnico" class="com.jkt.erp.varios.Vendedor" cascade="all" column="VENDEDOR_TECNICO_ID"/>
		<many-to-one name="representante" class="com.jkt.erp.varios.Representante" cascade="all" column="REPRESENTANTE_ID"/>
	
		<list name="contactos" table="CONTACTO" cascade="all">
			<key column="CLIENTE_SUCURSAL_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.varios.Contacto" />
		</list>
		
		<list name="domiciliosDeEntrega" table="DOMICILIO_ENTREGA" lazy="true" cascade="all">
			<key column="CLIENTE_SUCURSAL_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.varios.DomicilioEntrega" />
		</list>

		<list name="clasificadores" table="CLIENTE_SUCURSAL_CLASIFICADORES" lazy="true" cascade="all">
			<key column="CLIENTE_SUCURSAL_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.varios.ClienteSucursalClasificador" />
		</list>
		
	</class>

</hibernate-mapping>