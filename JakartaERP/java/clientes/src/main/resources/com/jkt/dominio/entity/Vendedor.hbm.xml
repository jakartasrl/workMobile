<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.varios.Vendedor" table="VENDEDOR">
		<id name="id" column="VENDEDOR_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="apellido" column="APELLIDO"/>
		<property name="nombres" column="NOMBRES"/>
		<property name="mail" column="MAIL"/>
		<property name="telefono" column="TELEFONO"/>
		<property name="activo" column="ACTIVO" type="boolean" />
				
	</class>
	
</hibernate-mapping>