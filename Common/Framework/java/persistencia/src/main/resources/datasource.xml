<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-4.0.xsd
						http://www.springframework.org/schema/tx
						http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

	<bean name="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
	</bean>

	<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">

		<property name="mappingLocations">
			<list>
				<value>classpath*:com/jkt/dominio/entity/*.hbm.xml</value>
			</list>
		</property>

		<property name="hibernateProperties">
			<props>
			 <prop key="hibernate.connection.driver_class">${db.className}</prop>
			 <prop key="hibernate.connection.url">${db.jdbcUrl}</prop>
			 <prop key="hibernate.connection.username">${db.user}</prop>
			 <prop key="hibernate.connection.password">${db.password}</prop>
			 <prop key="hibernate.dialect">${dialect.class}</prop>
			 <prop key="show_sql">${hibernate.show_sql}</prop>
			 <prop key="hibernate.c3p0.min_size">5</prop>
			 <prop key="hibernate.c3p0.max_size">20</prop>
			 <prop key="hibernate.c3p0.timeout">300</prop>
			 <prop key="hibernate.c3p0.max_statements">50</prop>
			 <prop key="hibernate.c3p0.idle_test_period">3000</prop>
			<prop key="hibernate.id.new_generator_mappings">true</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManagerJakarta" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<context:property-placeholder location="WEB-INF/database.properties"></context:property-placeholder>

</beans>