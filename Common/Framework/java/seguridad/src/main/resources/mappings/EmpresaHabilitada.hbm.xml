<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.dominio.EmpresaHabilitada" table="EMPRESAS_HABILITADAS">

		<id name="id" column="EMPRESA_HABILITADA_ID">
			<generator class="native"></generator>
		</id>

		<many-to-one name="usuario" column="USUARIO_ID" not-null="false" class="com.jkt.dominio.Usuario" cascade="save-update" ></many-to-one>
		<many-to-one name="empresa" column="EMPRESA_ID" not-null="false" class="com.jkt.dominio.Empresa" cascade="save-update" ></many-to-one>
<!-- 		<many-to-one name="usuario" column="USUARIO_ID" not-null="true" class="com.jkt.dominio.Usuario" cascade="save-update" lazy="false"></many-to-one> -->
<!-- 		<many-to-one name="empresa" column="EMPRESA_ID" not-null="true" class="com.jkt.dominio.Empresa" cascade="save-update" lazy="false"></many-to-one> -->

		<property name="habilitada" column="HABILITADA" type="boolean" />
		<property name="porDefecto" column="DEFECTO" type="boolean" />

	</class>
</hibernate-mapping>