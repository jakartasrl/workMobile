<?xml version="1.0" ?>
<!DOCTYPE entity [
  <!ELEMENT entidad     	(operacion, campos*,validadores*)>
  <!ELEMENT campos   		(campo*)>
  <!ELEMENT campo 			EMPTY>
  
  <!ELEMENT validadores 	(validador*)>
  <!ELEMENT validador 		EMPTY>
  
  <!ATTLIST entidad nombre	CDATA #REQUIRED>
  
  <!ATTLIST operacion operSave CDATA #REQUIRED>
  <!ATTLIST operacion operTraer CDATA #REQUIRED>

  <!ATTLIST campo fieldName CDATA #REQUIRED>
  <!ATTLIST campo tipo CDATA #REQUIRED>
  <!ATTLIST campo longitud CDATA #REQUIRED>
  <!ATTLIST campo readOnly CDATA #REQUIRED>
  <!ATTLIST campo visible CDATA #REQUIRED>
  <!ATTLIST campo orden CDATA #REQUIRED>
  <!ATTLIST campo label CDATA #REQUIRED>

  <!ATTLIST validador fieldName CDATA #REQUIRED>
  <!ATTLIST validador tipoValidacion CDATA #REQUIRED>
  <!ATTLIST validador entidad CDATA #REQUIRED>
  <!ATTLIST validador oidName CDATA #REQUIRED>
  <!ATTLIST validador descrName CDATA #REQUIRED>
  
]>

<entidades>
	<entidad nombre="empresa">

		<operacion operSave="GuardarEmpresa" operTraer="TraerEmpresas" />
		
		<campos>
			<campo fieldName="oid_empresa" tipo="Integer" longitud="0" visible="false" readOnly="false" orden="1" label="oid_empresa" />
			<campo fieldName="Codigo" tipo="String" longitud="15" visible="true" readOnly="false" orden="2" label="Codigo" />
			<campo fieldName="RazonSocial" tipo="String" longitud="60" visible="true" readOnly="false" orden="3" label="Razon Social" />
			<campo fieldName="UrlDB" tipo="String" longitud="60" visible="true" readOnly="false" orden="4" label="UrlDB" />
			<campo fieldName="Activo" tipo="Boolean" longitud="5" visible="true" readOnly="false" orden="5" label="Activo" />
		</campos>

		<validadores>
			<validador fieldName="Codigo" tipoValidacion="DistintoEspacio" entidad="" oidName="" descrName="" />
			<validador fieldName="RazonSocial" tipoValidacion="DistintoEspacio" entidad="" oidName="" descrName="" />
			<validador fieldName="UrlDB" tipoValidacion="DistintoEspacio" entidad="" oidName="" descrName="" />
		</validadores>
		
	</entidad>
	
	
	<entidad nombre="usuario">

		<operacion operSave="GuardarUsuario" operTraer="TraerUsuarios" />
		
		<campos>
			<campo fieldName="oid_usuario" tipo="Integer" longitud="0" visible="false" readOnly="false" orden="1" label="oid_usuario" />
			<campo fieldName="Codigo" tipo="String" longitud="15" visible="true" readOnly="false" orden="2" label="Codigo" />
			<campo fieldName="Nombre" tipo="String" longitud="60" visible="true" readOnly="false" orden="3" label="Nombre" />
			<campo fieldName="Apellido" tipo="String" longitud="60" visible="true" readOnly="false" orden="4" label="Apellido" />
			<campo fieldName="Activo" tipo="Boolean" longitud="5" visible="true" readOnly="false" orden="5" label="Activo" />
		</campos>

		<validadores>
			<validador fieldName="Codigo" tipoValidacion="DistintoEspacio" entidad="" oidName="" descrName="" />
			<validador fieldName="Nombre" tipoValidacion="DistintoEspacio" entidad="" oidName="" descrName="" />
			<validador fieldName="Apellido" tipoValidacion="DistintoEspacio" entidad="" oidName="" descrName="" />
			<validador fieldName="Codigo" tipoValidacion="Existente" entidad="com.jkt.dominio.Usuario" oidName="nombre" descrName="apellido" />
		</validadores>
		
	</entidad>
	
</entidades>