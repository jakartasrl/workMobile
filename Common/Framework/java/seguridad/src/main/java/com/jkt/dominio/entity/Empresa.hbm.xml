<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.dominio.Empresa" table="EMPRESA">
		<id name="id" column="EMPRESA_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="razonSocial" column="RAZON_SOCIAL"/>
		<property name="urlDB" column="URL_DB"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
	</class>
	
</hibernate-mapping>