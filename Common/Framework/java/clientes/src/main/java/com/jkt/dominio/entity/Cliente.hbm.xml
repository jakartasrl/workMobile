<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.erp.varios.Cliente" table="CLIENTE" >
		
		<id name="id" column="CLIENTE_ID">
			<generator class="native" />
		</id>

		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="RAZON_SOCIAL"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<many-to-one name="idioma" class="com.jkt.varios.dominio.Idioma" column="IDIOMA_ID"></many-to-one>
		<many-to-one name="sujetoImpositivo" class="com.jkt.erp.impuestos.dominio.SujetoImpositivo" column="SUJETO_IMPOSITIVO_ID"></many-to-one>
		
		<list name="listaCondicionPago" table="COND_PAGO_CLIENTE" lazy="true" cascade="all">
			<key column="CLIENTE_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.varios.CondPagoCliente" />
		</list>

		<list name="listaEsquemaPrecios" table="ESQUEMA_PRECIOS_CLIENTE" lazy="true" cascade="all">
			<key column="CLIENTE_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.varios.EsquemaPreciosCliente" />
		</list>

		<list name="listaSucursales" table="CLIENTE_SUCURSAL" lazy="true" cascade="all">
			<key column="CLIENTE_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.varios.ClienteSucursal" />
		</list>


<!-- deberia ir en una nueva tabla, ya que la tabla de componentes puede tener relacionada a ella cualquier tipo de clase -->
		<list name="listaClasificadores" table="CLASIFICADORES_CLIENTE" lazy="true" cascade="all">
			<key column="CLIENTE_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.varios.dominio.ComponenteValor" />
		</list>
		
		
	</class>

</hibernate-mapping>