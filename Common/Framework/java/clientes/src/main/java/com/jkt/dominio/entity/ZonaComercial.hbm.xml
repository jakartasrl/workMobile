<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.erp.varios.ZonaComercial" table="ZONA_COMERCIAL">
		<id name="id" column="ZONA_COMERCIAL_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />


		<many-to-one name="vendedor" class="com.jkt.erp.varios.Vendedor" cascade="none"  column="VENDEDOR_ID"/>				
	</class>
	
</hibernate-mapping>