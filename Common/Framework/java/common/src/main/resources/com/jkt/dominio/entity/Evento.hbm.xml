<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.agenda.Evento" table="EVENTO" >
		
		<id name="id" column="EVENTO_ID">
			<generator class="native" />
		</id>

<!-- 		CONTIENE EL ESTADO DEL EVENTO INTERNAMENTE. PUEDE CONSULTAR SI SE PUEDE INICIAR, SE PUEDE COMPLETAR, Y OBVIAMENTE SI ESTA RELACIONADO A UNA TAREA. -->
		<many-to-one name="objetivo" class="com.jkt.grafo.Agendable" column="TAREA_ID" cascade="all" />

		<property name="activo" column="ACTIVO" type="boolean" />
			
	</class>

</hibernate-mapping>
