<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.varios.dominio.Clasificador" table="CLASIFICADOR">
		<id name="id" column="CLASIFICADOR_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="codigo" type="string">
            <column name="CODIGO" length="15" />
        </property>
		
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<one-to-one name="componentePadre" class="com.jkt.varios.dominio.Componente" cascade="all"></one-to-one>
<!-- 		<many-to-one name="componenteHijo" column="COMPONENTE_HIJO_ID" unique="true" class="com.jkt.varios.dominio.Componente" cascade="all" /> -->
		
		
	</class>
	
</hibernate-mapping>