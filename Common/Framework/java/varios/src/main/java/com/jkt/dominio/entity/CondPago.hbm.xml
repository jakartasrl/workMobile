<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.varios.dominio.CondPago" table="CONDICION_PAGO">
		<id name="id" column="COND_PAGO_ID">
			<generator class="native" />
		</id>
		
		<property name="codigo" column="CODIGO" />
		<property name="descripcion" column="DESCRIPCION" />
		<property name="activo" column="ACTIVO" type="boolean" />
		<property name="baseFechaFactura" column="BASE_FECHA_FACTURA" type="boolean" />
		<property name="baseFechaRecep" column="BASE_FECHA_RECEP" type="boolean" />
		
		<list name="detalles" table="COND_PAGO_DET" lazy="true" cascade="all">
			<key column="COND_PAGO_ID"></key>
			<index column="ORDEN"></index>
			<one-to-many class="com.jkt.varios.dominio.CondPagoDet"/>
		</list>

	</class>

</hibernate-mapping>