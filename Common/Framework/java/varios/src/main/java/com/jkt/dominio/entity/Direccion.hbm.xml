<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.varios.dominio.Direccion" table="DIRECCION">
		<id name="id" column="DIRECCION_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="nombre" column="NOMBRE"/>
		<property name="direccion" column="DIRECCION"/>
		<property name="codigoPostal" column="CODIGO_POSTAL"/>
		<property name="localidad" column="LOCALIDAD"/>
		
		<many-to-one name="pais" class="com.jkt.varios.dominio.Pais" cascade="none" column="PAIS_ID"/>				
		<many-to-one name="provincia" class="com.jkt.varios.dominio.Provincia" cascade="none" column="PROVINCIA_ID"/>				
	</class>
	
</hibernate-mapping>