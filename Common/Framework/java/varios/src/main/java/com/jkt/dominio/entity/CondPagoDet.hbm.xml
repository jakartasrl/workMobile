<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.varios.dominio.CondPagoDet" table="CONDICION_PAGO_DETALLE">
		<id name="id" column="COND_PAGO_DET_ID">
			<generator class="native" />
		</id>
		
		<one-to-one name="condicionDePago" class="com.jkt.varios.dominio.CondPagoDet"></one-to-one>
		
		<property name="activo" column="ACTIVO" type="boolean" />
		<property name="dias" column="DIAS" type="integer" />
		<property name="porcentaje" column="PORCENTAJE" type="double" />
		
	</class>

</hibernate-mapping>