<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.varios.dominio.Componente" table="COMPONENTE">

		<id name="id" column="COMPONENTE_ID">
			<generator class="native"></generator>
		</id>

		<property name="codigo" type="string">
			<column name="CODIGO" length="15" />
		</property>

		<property name="descripcion" column="DESCRIPCION" />
		<property name="activo" column="ACTIVO" type="boolean" />

		<many-to-one name="clasificador" column="CLASIFICADOR_ID" class="com.jkt.varios.dominio.Clasificador"></many-to-one>

		<!-- <one-to-one name="componenteHijo" constrained="true" class="com.jkt.varios.dominio.Componente"></one-to-one> -->
		<many-to-one name="componenteHijo" column="COMPONENTE_HIJO_ID" unique="true" class="com.jkt.varios.dominio.Componente" cascade="all" />
		<many-to-one name="componentePadre" column="COMPONENTE_PADRE_ID" unique="true" class="com.jkt.varios.dominio.Componente" cascade="all"/>
		
		<list name="valores" table="COMPONENTE_VALOR" lazy="true" cascade="all">
			<key column="COMPONENTE_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.varios.dominio.ComponenteValor" />
		</list>

	</class>

</hibernate-mapping>