<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.erp.impuestos.dominio.Impuesto" table="IMPUESTOS" discriminator-value="IMPUESTO">
		<id name="id" column="IMPUESTO_ID">
			<generator class="native" />
		</id>
		<discriminator column="DISCRIMINADOR" type="string" />

<!-- 		<property name="comportamiento" column="COMPORTAMIENTO" type="string" /> -->
		<property name="codigo" column="CODIGO" />
		<property name="descripcion" column="DESCRIPCION" />
		<property name="activo" column="ACTIVO" type="boolean" />

<!-- 		<list name="categorias" table="CATEGORIA_IMPUESTOS" lazy="true" cascade="all"> -->
<!-- 			<key column="IMPUESTO_ID"></key> -->
<!-- 			<index column="ORDEN"></index> -->
<!-- 			<one-to-many class="com.jkt.erp.impuestos.dominio.CategoriaImpuesto" /> -->
<!-- 		</list> -->
			
		<subclass name="com.jkt.erp.impuestos.dominio.Iva" discriminator-value="IVA">
			<list name="categorias" table="CATEGORIA_IMPUESTOS" lazy="true"
				cascade="all">
				<key column="IMPUESTO_ID"></key>
				<index column="ORDEN"></index>
				<one-to-many class="com.jkt.erp.impuestos.dominio.CategoriaIva" />
			</list>
		</subclass>

		<subclass name="com.jkt.erp.impuestos.dominio.IngresosBrutos" discriminator-value="INGRESOS_BRUTOS">
			<list name="categorias" table="CATEGORIA_IMPUESTOS" lazy="true"
				cascade="all">
				<key column="IMPUESTO_ID"></key>
				<index column="ORDEN"></index>
				<one-to-many class="com.jkt.erp.impuestos.dominio.CategoriaIIBB" />
			</list>
		</subclass>

		<subclass name="com.jkt.erp.impuestos.dominio.Ganancias" discriminator-value="GANANCIAS">
			<list name="categorias" table="CATEGORIA_IMPUESTOS" lazy="true"
				cascade="all">
				<key column="IMPUESTO_ID"></key>
				<index column="ORDEN"></index>
				<one-to-many class="com.jkt.erp.impuestos.dominio.CategoriaGanancias" />
			</list>
		</subclass>

		<subclass name="com.jkt.erp.impuestos.dominio.SUSS" discriminator-value="SUSS">
			<list name="categorias" table="CATEGORIA_IMPUESTOS" lazy="true"
				cascade="all">
				<key column="IMPUESTO_ID"></key>
				<index column="ORDEN"></index>
				<one-to-many class="com.jkt.erp.impuestos.dominio.CategoriaSUSS" />
			</list>
		</subclass>

	</class>

</hibernate-mapping>