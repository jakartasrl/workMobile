<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.erp.impuestos.dominio.SujetoImpositivo" table="SUJETO_IMPOSITIVO" >
		<id name="id" column="SUJETO_IMPOSITIVO_ID">
			<generator class="native" />
		</id>

		<property name="razonSocial" column="RAZON_SOCIAL" />
		<property name="cuit" column="CUIT" />
		<property name="personaJuridica" column="PERSONA_JURIDICA" type="boolean" />

		<many-to-one name="direccionLegal" class="com.jkt.varios.dominio.Direccion" cascade="all" column="DIRECCION_ID"/>
		
		<list name="inscripcionesImpositivas" >
			<key column="SUJETO_IMPOSITIVO_ID" />
			<index column="ORDEN" />
			<one-to-many class="com.jkt.erp.impuestos.dominio.InscripcionImpositiva" />
		</list>
		
		
		<property name="activo" column="ACTIVO" type="boolean" />
<!-- 		@JKT Falta el cliente -->
		
	</class>

</hibernate-mapping>