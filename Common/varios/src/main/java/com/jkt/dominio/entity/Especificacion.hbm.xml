<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.varios.dominio.Especificacion" table="ESPECIFICACION">
		<id name="id" column="ESPECIFICACION_ID">
			<generator class="native"></generator>
		</id>
		
		<property name="ruta" column="RUTA"/>
		<property name="nombre" column="NOMBRE"/>
		<property name="descripcion" column="DESCRIPCION"/>
		<property name="activo" column="ACTIVO" type="boolean" />
		
		<property name="tipo" column="TIPO">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.jkt.varios.dominio.Especificacion.TipoEspecificacion</param>
			</type>
 		</property>

	</class>
	
</hibernate-mapping>