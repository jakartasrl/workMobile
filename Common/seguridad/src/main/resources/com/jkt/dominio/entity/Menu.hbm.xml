<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.jkt.dominio.menu.ElementoMenu" table="MENU">
		<id name="id" column="MENU_ID">
			<generator class="native" />
		</id>
		<discriminator column="TIPO_ELEMENTO" type="string" />

		<property name="codigo" column="CODIGO" />

		<subclass name="com.jkt.dominio.menu.Programa" discriminator-value="PROGRAMA">
		</subclass>

		<subclass name="com.jkt.dominio.menu.Script" discriminator-value="SCRIPT">
		</subclass>

		<subclass name="com.jkt.dominio.menu.Menu" discriminator-value="MENU">
			<property name="name" column="NOMBRE" type="string" />
			<property name="img" column="IMAGEN" type="string" />
			<property name="size" column="TAMANIO" type="string" />
			<property name="theme" column="COLOR" type="string" />
			<property name="link" column="URL" type="string" />
			<property name="type" column="TIPO" type="string" />
			
			<list name="elementos" table="MENU_HIJOS" lazy="true" cascade="all">
				<key>
					<column name="MENU_ID"></column>
				</key>
				<index column="ORDEN" />
				<many-to-many class="com.jkt.dominio.menu.ElementoMenu" column="MENU_ID_HIJO">
				</many-to-many>
			</list>
			
		</subclass>

	</class>

</hibernate-mapping>