<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jkt.dominio.menu.TextoMenu" table="TEXTOS_MENU">

		<id name="id" column="TEXTOS_MENU_ID">
			<generator class="native"></generator>
		</id>

		<property name="texto" column="TEXTO" type="string" />
		<property name="alineacion" column="ALINEACION" type="string" />
		<property name="fuente" column="FUENTE" type="string" />
		<property name="tamanio" column="TAMANIO" type="integer" />
		<property name="activo" column="ACTIVO" type="boolean" />

	</class>
</hibernate-mapping>